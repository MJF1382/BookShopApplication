<UserControl x:Class="BookShopApplication.Views.UserControls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookShopApplication.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Button Name="btnIcon" Style="{DynamicResource IconButtonStyle}" Width="{Binding ButtonWidth}" Height="{Binding ButtonHeight}" HorizontalAlignment="Center" BorderThickness="0" Cursor="Hand" Background="{Binding ButtonBackground}">
            <Image Name="imgIcon" Source="{Binding Source}" Width="{Binding IconWidth}" Height="{Binding IconHeight}" />
        </Button>
    </Grid>
</UserControl>
